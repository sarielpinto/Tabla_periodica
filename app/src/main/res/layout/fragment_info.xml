<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoFragment"
    android:background="@drawable/fnd"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/uno"
                android:textColor="#000000"
                android:textStyle="bold"

                android:paddingLeft="15dp"
                android:layout_marginTop="30dp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="346dp"
                android:layout_height="146dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="@string/dos"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="334dp"
                android:layout_height="75dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="@string/tres"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Space
                android:layout_width="368dp"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="350dp"
                android:layout_height="72dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="@string/cuatro"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="373dp"
                android:layout_height="186dp"
                android:layout_weight="1"
                android:src="@drawable/or" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:text="@string/cinco"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:layout_marginTop="30dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="350dp"
                android:layout_height="84dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:freezesText="true"
                android:text="@string/seis"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:layout_marginTop="30dp"/>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="352dp"
                android:layout_height="142dp"
                android:layout_weight="1"
                android:src="@drawable/tablita"
                android:paddingLeft="25dp"
                android:layout_marginTop="30dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="362dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:freezesText="true"
                android:text="@string/siete"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="306dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:src="@drawable/dos"
                android:paddingLeft="35dp"
                android:layout_marginTop="30dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="354dp"
                android:layout_height="169dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:freezesText="true"
                android:paddingLeft="15dp"
                android:text="@string/ocho"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:paddingLeft="50dp"
                android:src="@drawable/cloro" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>


    </ScrollView>

    <Space
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout  >